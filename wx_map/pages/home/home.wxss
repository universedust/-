/* pages/home/home.wxss */
.search{
  padding: 20rpx;
}
.search-text{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 50rpx;
  color: #aaa;
  text-align: center;
  border: 1px solid #ddd;
  border-radius: 20rpx;
}
.search-text icon{
  margin-right: 10rpx;
}

swiper{
  height: 350rpx;
}

swiper image{
  width: 100%;
  height: 100%;
}

.grid-list{
  margin-top: 0rpx;
  display: flex;
  flex-wrap: wrap;
  border-top: 1rpx solid #efefef;
  border-left: 1rpx solid #efefef;
  border-bottom: 18rpx solid #F5F5F5;
}
.grid-list0{
  margin-top: 30rpx;
  display: flex;
  flex-wrap: wrap;
  border-top: 1rpx solid #efefef;
  border-left: 1rpx solid #efefef;
  border-bottom: 18rpx solid #F5F5F5;
}
.grid-item0{
  width: 25%;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #efefef;
  border-right: 1rpx solid #efefef;
  box-sizing: border-box;
}


.grid-item{
  width: 20%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #efefef;
  border-right: 1rpx solid #efefef;
  box-sizing: border-box;
}

.grid-item image{
  width: 80rpx;
  height: 80rpx;
}

.grid-item text{
  font-size: 24rpx;
  margin-top: 10rpx;
}
.grid-item0 image{
  width: 80rpx;
  height: 80rpx;
}

.grid-item0 text{
  font-size: 24rpx;
  margin-top: 10rpx;
}

.img-box{
  display: flex;
  padding: 20rpx 10rpx;
  justify-content: space-around;
}

.img-box image{
  width: 45%;
}

.newest{
  /* column-count: 2; */
  margin-top: 0rpx;
  display: flex;
  flex-wrap: wrap;
}

.newest-title{
  width: 100%;
  padding:30rpx 0;
  height: 40rpx;
  color: #AB956D;
  text-align: center;
}
.newest-box{
  display: flex;
  flex-wrap: wrap;
  padding:0 40rpx;
}
.newest-box .newest-list{

  width: 325rpx;
  height: 325rpx;
  margin:0 20rpx 20rpx 0;
  border-radius: 10px;
  text-align: center;
  background: #f5f6f5;
}
.newest-box .newest-list:nth-child(2n){
  margin-right: 0;
}
.newest-box .newest-list image{
  width: 175rpx;
  height: 175rpx;
  margin: 20rpx 0 10rpx;
}
.newest-box .newest-list .newest-text{
  font-size: 32rpx;
}